    $(document).ready(function(){
      // Get total and current progress from data attributes
      var total = $(".progress-bar").data("total");
      var currentProgress = $(".progress-bar").data("progress");

      // Calculate percentage
      var percentage = (currentProgress / total) * 100;

      // Update progress bar width and text
      $("#progress").css("width", percentage + "%");
      $("#percentText").text(percentage.toFixed(2) + "%");
    });
  </script>