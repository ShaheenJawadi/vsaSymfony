{% extends 'home/homeLayout.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/cours_lessons.css') }}?v=5">
{% endblock %}


{% block body %}

	<div class="cours_lessons">


		<div class="content">
			<div class="container">
				<div class="row">

					<div class="col-md-9">
						<div class="core">

							<div class="content_holder">
								<div class="thumb">
									<iframe src="https://www.youtube.com/embed/6_gXiBe9y9A" frameborder="0" allowfullscreen></iframe>
								</div>
								<div class="content">
									{{currentLesson.content}}


								</div>

							</div>

							{% if nextLesson =="quiz" %}

								<a href="{{ path('home_quizz_test', {'id': singleCours.id}) }}">

									<button class="btn_main">Passer le quizz</button>
								</a>
							{% else %}
								<a  href="{{ path('home_cours_lessons_index', {'slug': singleCours.slug , lesson:nextLesson}) }}">

									<button class="btn_main">Suivant</button>
								</a>
							{% endif %}


						</div>
					</div>
					<div class="col-md-3">
						<div class="side_bar">


							{% for key, lesson in singleCours.lessons %}
								<div class="single  {% if key+1 ==userCours.stage %}current {% elseif  key+1<userCours.stage %}done{% endif %}">
									<div class="circle"></div>
									<div class="title">
										lesson
										{{key+1}}</div>

								</div>
							{% endfor %}


							<div class="single quizz">
								<div class="circle"></div>
								<div class="title">
									Quizz</div>


							</div>

						</div>

					</div>


				</div>

			</div>


		</div>
	</div>
{% endblock %}
