									</div>
               						 {{ form_end(forumPub) }}
									


								</div>

							</div>


							<div class="nav_section">
								<div class="section_list">
									<div class="single selected" >Tous</div>
                       				<div class="single" >Mes publication</div>
                        
									<div class="single">Populaire</div>


								</div>
								<div class="search">

									<div class="input-group flex-nowrap">
										<span class="input-group-text">
											<i class="fa-solid fa-magnifying-glass"></i>
										</span>
										<input type="text" class="form-control" placeholder="Search feed">
									</div>

								</div>

							</div>


							<div class="pub_list">
								{% for pub in pubs %}
									{% include 'home/components/forum/forumGrid.html.twig' with {'pub': pub,'commentPub':pub} %}
								{% endfor %}
							</div>
						</div>
					</div>
				</div>
			</div>

		</div>

	</div>


