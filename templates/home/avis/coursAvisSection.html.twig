<div class="single s info_review">
    <h3>Avis</h3>
    <div class="general">
        <div class="list">
            <div class="single_class_review">
                <div class="title">Stellaire</div>
                <div class="sep"></div>
                <div class="count">20</div>
            </div>
            <div class="single_class_review">
                <div class="title">Galactique</div>
                <div class="sep"></div>
                <div class="count">18</div>
            </div>
            <div class="single_class_review">
                <div class="title">Solaire</div>
                <div class="sep"></div>
                <div class="count">5</div>
            </div>
            <div class="single_class_review">
                <div class="title">Lunaire</div>
                <div class="sep"></div>
                <div class="count">2</div>
            </div>
            <div class="single_class_review">
                <div class="title">Cométaire</div>
                <div class="sep"></div>
                <div class="count">0</div>
            </div>
        </div>
        <div class="counting infos">
            <div class="avg">4.8</div>
            <div class="rating ">
                <div class="list_stars">
                    <div class="star">
                        <i class="fa-solid fa-star"></i>
                    </div>
                    <div class="star">
                        <i class="fa-solid fa-star"></i>
                    </div>
                    <div class="star">
                        <i class="fa-solid fa-star"></i>
                    </div>
                    <div class="star">
                        <i class="fa-solid fa-star"></i>
                    </div>
                    <div class="star">
                        <i class="fa-regular fa-star"></i>
                    </div>
                </div>
            </div>
            <div class="total">25 Avis</div>
        </div>
    </div> 

    <div class="list_rating">
        {% for avi in avis %}
            <div class="item">
                <div class="avatar">
                    <img src="{{ asset('images/cours/person.jpg') }}" alt="">
                </div>
                <div class="avis_content">
                    <div class="top infos">
                        <div class="name">Nom de l'utilisateur</div>
                        <div class="date">{{ avi.getDate().format('d/m/Y') }}</div>
                        <div class="rating">
                            <div class="list_stars">
                                {% for i in 1..5 %}
                                    {% if avi.getNote() >= i %}
                                        {% if avi.getNote() >= i %}
                                        <div class="star">
                                            <i class="fa-solid fa-star"></i>
                                        </div>
                                        {% else %}
                                    <div class="star">
                                        <i class="fa-regular fa-star"></i>
                                    </div>
                                        {% endif %}
                                    {% else %}
                                    <div class="star">
                                        <i class="fa-regular fa-star"></i>
                                    </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                            <small>({{ avi.getNote() }})</small>
                        </div>
                    </div>
                    <div class="avis_p">
                        <p>{{ avi.getMessage() }}</p>
                    </div>
                    <div class="options">
                        <div class="dropdown">
                            <div class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa-solid fa-ellipsis-v"></i>
                            </div>
                            <div class="dropdown-menu">
                                <a href ="{{ path('home_avis_avis_supprimer', {id: avi.getIdAvi})}}">supprimer</a>                           
                                <a href ="{{ path('home_avis_avis_modifier', {id: avi.getIdAvi})}}">modifier</a>                           
                             </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    
    <style>
        .options {
            position: relative;
        }
    
        .dropdown-toggle {
            position: absolute;
            right: 0;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
        }
    </style>
    
    <script>
        document.querySelectorAll('.dropdown-toggle').forEach(function(el) {
            el.addEventListener('click', function() {
                var dropdownMenu = this.nextElementSibling;
                dropdownMenu.classList.toggle('show');
            });
        });
    
        document.querySelectorAll('.item').forEach(function(el) {
            el.addEventListener('mouseleave', function() {
                var dropdownMenu = this.querySelector('.dropdown-menu');
                dropdownMenu.classList.remove('show');
            });
        });
    </script>
    

    <div class="my_review">
        <h4>Ajouter un Avis</h4>
        <form method="post" action="{{ path('home_avis_ajouter_avis') }}">
            <div class="rate infos">
                <span>Notez ce cours</span>
                <div class="rating">
                    <div class="list_stars">
                        <input type="hidden" name="note" value="5"> {# Par défaut, la note est 5 #}
                        {% for i in 1..5 %}
                            <div class="star">
                                <input type="radio" id="star{{ i }}" name="note" value="{{ i }}">
                                <label for="star{{ i }}"><i class="fa-solid fa-star"></i></label>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div>
                <label class="form-label">Écrire un message</label>
                <textarea class="form-control" rows="3" name="message" required></textarea>
            </div>
            <button class="btn_main" type="submit">Poster</button>
        </form>
    </div>
</div>
