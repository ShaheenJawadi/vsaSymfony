<div class="col-md-6">
    <div class="single">
        <div class="header_section">
            <div class="related_cours">

                <div class="txt">
                    Quiz
                </div>
                <div class="title">
                    {{ quiz.nom }}
                </div>

            </div>
            <div class="options_chimp ">
                <div class="dropdown">
                    <div class="  dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa-solid fa-ellipsis-vertical"></i>
                    </div>
                    <ul class=" dropdown-menu dropdown-menu-end ">

                        <li><div class="dropdown-item "  openGeneralPopup data-link="{{ path('teacher_quiz_preview_popup' , {quiz_id:quiz.id}) }}">Afficher</div></li>

                        <li><a class="dropdown-item " href="{{ path('teacher_quiz_up' , {quiz_id:quiz.id}) }}">Modifier</a></li>

                        <li><a class="dropdown-item " href="{{ path('teacher_quiz_delete_quiz', {'idQuiz': quiz.id}) }}" onclick="return confirm('Are you sure you want to delete this quiz ?');">Supprimer</a></li>
                    </ul>
                </div>

            </div>
        </div>

        <div class="infos">
            <div class="s">Duration : <span> {{ quiz.duree }}</span> </div>
            <div class="s">Nb Question: <span>{{quiz.getQuestions()|length}}</span></div>


        </div>

    </div>
</div>